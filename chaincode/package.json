{
  "name": "chaincode",
  "version": "1.0.0",
  "description": "This folder contains fabric chaincode",
  "main": "index.js",
  "scripts": {
    "build": "run-s clean && tsc -p tsconfig.build.json",
    "test": "run-s build test:*",
    "test:health": "nyc --silent mocha --recursive --require ts-node/register './src/modules/health/handler/*.spec.ts'",
    "clean": "trash dist test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fabric-shim": "^2.2.3",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.1.0",
    "typescript": "^4.7.4",
    "underscore": "^1.13.6",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@theledger/fabric-mock-stub": "^5.0.1",
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.5.0",
    "@types/underscore": "^1.11.4",
    "@types/uuid": "^3.4.10",
    "chai": "^4.3.7",
    "nyc": "^15.1.0",
    "trash-cli": "^5.0.0"
  },
  "files": [
    "src"
  ],
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.spec.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "lines": 1,
    "functions": 1,
    "branches": 1,
    "all": true,
    "check-coverage": true
  }
}
